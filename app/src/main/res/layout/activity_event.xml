<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".event"
    android:background="@drawable/bgapps">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnav"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimaryDark"
        app:itemIconTint="@drawable/color_state"
        app:itemTextColor="@drawable/color_state"
        app:menu="@menu/navigation_item"

        />

    <Button
        android:id="@+id/button7"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="243dp"
        android:layout_marginEnd="56dp"
        android:text="@string/show_events"
        android:textColor="#fff"
        android:textSize="20sp"
        android:background="@drawable/bgbtn"/>

    <Button
        android:id="@+id/button8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="308dp"
        android:textColor="#fff"
        android:layout_marginEnd="53dp"
        android:background="@drawable/bgbtn"
        android:text="@string/organise_event"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_above="@+id/btnav"
        android:layout_below="@+id/button8"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="109dp"
        android:background="@drawable/bussiness" />

</RelativeLayout>