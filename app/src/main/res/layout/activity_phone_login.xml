<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneLogin"
    android:background="@drawable/bglogin">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone_no_input"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="180dp"
        android:padding="8dp"
        android:textColor="#FFF"
        android:textColorHint="#FFF"
        android:hint="@string/enter_a_phone_no"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:drawableStart="@drawable/common_full_open_on_phone"
        android:background="@drawable/bgbtn"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/verification_code_input"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="4dp"
        android:padding="8dp"
        android:layout_below="@+id/phone_no_input"
        android:hint="@string/enter_verification_code_here"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:drawableStart="@drawable/password"
        android:background="@drawable/bgbtn"
        android:textAlignment="center"
        android:textStyle="bold"
        android:visibility="invisible"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/send_verification_code_button"
        android:text="Send Verification Code"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:background="@drawable/bgbtn"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="4dp"
        android:padding="8dp"
        android:layout_below="@+id/verification_code_input" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/verify_button"
        android:text="Verify"
        android:textAllCaps="false"
        android:visibility="invisible"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="4dp"
        android:padding="8dp"
        android:layout_below="@+id/send_verification_code_button" />

</RelativeLayout>